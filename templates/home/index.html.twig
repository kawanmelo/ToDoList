{% extends 'base.html.twig' %}
{% block title %}ToDoList{% endblock %}

{% block body %}
    <div class="container " style="padding-top: 50px; padding-bottom: 50px;">
        <div class="card shadow p-4 mx-auto">
            <div class="card-body">
                <h1 class="card-title text-center mb-4">Tasks</h1>
                <div class="list-group">
                    {% for task in tasks %}
                        <div class="list-group-item d-flex flex-column flex-md-row justify-content-between align-items-center p-3 mb-3 border rounded shadow-sm">
                            <div class="flex-grow-1 d-flex flex-wrap">
                                <div class="p-2 me-4">
                                    <span class="fw-bold text-primary">ID:</span> {{ task.id }}
                                </div>
                                <div class="p-2 me-4">
                                    <span class="fw-bold text-primary">Name:</span> {{ task.name }}
                                </div>
                                <div class="p-2 me-4">
                                    <span class="fw-bold text-primary">Cost:</span> R$ {{ task.cost }}
                                </div>
                                <div class="p-2">
                                    <span class="fw-bold text-primary">Limit Date:</span> {{ task.limitDate|date('Y-m-d') }}
                                </div>
                            </div>
                            <div class="btn-group mt-3 mt-md-0">
                                <a class="btn btn-primary me-2" href="https://localhost:8000/home/edit">Edit</a>
                                <a  onclick="return confirm('Are you sure ?')" class="btn btn-danger" href="{{ path('app_delete', { id: task.id }) }}">Delete</a>
                            </div>
                        </div>
                    {% else %}
                        <p class="text-center text-muted">No tasks available.</p>
                    {% endfor %}
                    <div class="d-flex justify-content-center" >
                        <a class="btn btn-primary" href="https://localhost:8000/home/create">Add a new task</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
